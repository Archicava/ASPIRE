# Base behavior
DEBUG=false

# Local storage mode (default: true)
# When true:
#   - Cases/jobs stored in JSON files (instead of CSTORE)
#   - Payloads stored as local files (instead of R1FS)
#   - No CSTORE/R1FS endpoints required
# When false:
#   - Uses CSTORE for cases/jobs
#   - Uses R1FS for payload files
# USE_LOCAL=true

# Data directory for local storage (default: ./data)
# Structure:
#   {DATA_DIR}/db/cases.json      - Case records
#   {DATA_DIR}/db/jobs.json       - Job records
#   {DATA_DIR}/payloads/{id}.json - Case payloads
# DATA_DIR=./data

# Mock data - show seed/demo cases in case library (default: true)
# When true: Case library shows seed cases + any real user-created cases
# When false: Case library shows only real cases from storage
# MOCK_DATA=true

# Mock mode - use mock predictions instead of calling real API (default: false)
# When true: Predictions use generateMockPredictionResponse (no API call)
# When false: Predictions call the real Aspire API
# MOCK_MODE=false

# Live endpoints (required)
R1EN_CHAINSTORE_API_URL=http://localhost:3001
R1EN_R1FS_API_URL=http://localhost:3002
EE_CHAINSTORE_API_URL=http://localhost:3001
EE_R1FS_API_URL=http://localhost:3002
CHAINSTORE_API_URL=http://localhost:3001
R1FS_API_URL=http://localhost:3002

# Optional peer list (JSON array)
R1EN_CHAINSTORE_PEERS='["http://localhost:3001"]'
EE_CHAINSTORE_PEERS='["http://localhost:3001"]'
CHAINSTORE_PEERS='["http://localhost:3001"]'

# CStore auth (live mode)
R1EN_CSTORE_AUTH_HKEY=
R1EN_CSTORE_AUTH_SECRET=
R1EN_CSTORE_AUTH_BOOTSTRAP_ADMIN_PWD=
EE_CSTORE_AUTH_HKEY=
EE_CSTORE_AUTH_SECRET=
EE_CSTORE_AUTH_BOOTSTRAP_ADMIN_PW=
CSTORE_AUTH_HKEY=
CSTORE_AUTH_SECRET=

# Session signing
AUTH_SESSION_SECRET=replace-with-32+char-secret
AUTH_SESSION_COOKIE=r1-session
AUTH_SESSION_TTL_SECONDS=86400

# CStore hash keys
RATIO1_CASES_HKEY=ratio1-asd-cases
RATIO1_JOBS_HKEY=ratio1-asd-jobs

# Aspire ASD Screening API
# URL is built from: ASPIRE_API_URL > http://{R1EN_HOST_IP}:{API_PORT} > http://localhost:5083
# ASPIRE_API_URL=http://localhost:5083
# R1EN_HOST_IP=localhost
# API_PORT=5083
ASPIRE_API_ENABLED=true
ASPIRE_API_TIMEOUT_MS=30000
